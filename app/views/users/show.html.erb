<% provide(:title, @user.username) %>
<div class="container">
  <% if @user.id == current_user.id %>
    <h1>あなたの詳細ページ</h1>
      <p><%= @user.username %></p>
      <p><%= @user.email %></p>
  <% else %>
    <h1><%= @user.username %>さんの詳細ページ</h1>
  <% end %>
</div>

<h3>フォローしているユーザー</h3>
<% @user.following.each do |follow| %>
<tr>
<td><%= link_to follow.username,user_path(follow.id) %></td>
</tr>
  <% end %>
<br>

<h3>フォローされているユーザー</h3>
<% @user.followers.each do |follower| %>
<tr>
<td><%= link_to follower.username,user_path(follower.id) %></td>
</tr>
  <% end %>
<br>

